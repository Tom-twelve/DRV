struct Encoder_t Encoder;

extern const short int ElectricalAngleRef[DivideNum * (uint8_t)MotorMagnetPairs + 2];
extern const int MechanicalAngleRef[DivideNum * (uint8_t)MotorMagnetPairs + 2];
/* CODE END PV */

/* USER CODE BEGIN */

void GetPositionImformation(void)
{
	GetMechanicalAngle_15bit();	//读取编码器角度值寄存器
	GetMechanicalAngle(); //计算角度制机械角度(0~360)
	GetMechanicalAngleSpeed(); //计算机械角速度
	GetAverageMechanicalAngleSpeed(); //对机械角速度进行均值滤波
	CalculateElectricalAngle(); //计算角度制电角度(0~360 * p)
	GetElectricalAngleSpeed(); //计算电角速度
	GetAverageElectricalAngleSpeed(); //对电角速度进行均值滤波
	GetMechanicalAngleSpeed_Encoder_15bit();
	GetMechanicalAngleSpeed_Encoder();
}

void GetMechanicalAngle_15bit(void)
{
	Encoder.MechanicalAngle_15bit = (TLE5012_ReadRegister(TLE5012_Command_ReadCurrentValue_AngleValue) & 0x7FFF);
}

void GetMechanicalAngle(void)
{
	Encoder.MechanicalAngle = 360.f * (double)Encoder.MechanicalAngle_15bit / 32768.0f;
}

void GetMechanicalAngleSpeed(void)
{
	float presentMechanicalAngle = 0;
	static float lastMechanicalAngle = 0;
	float angleDifference = 0;
	
	presentMechanicalAngle = Encoder.MechanicalAngle;
	
	angleDifference = presentMechanicalAngle - lastMechanicalAngle;
	
	if(angleDifference > 180.f)
	{
		angleDifference -= 360.f;
	}
	
	else if(angleDifference < -180.f)
	{
		angleDifference += 360.f;
	}
	
	Encoder.MechanicalAngleSpeed = angleDifference / TLE5012_UpdateTime_2;
	
	lastMechanicalAngle = presentMechanicalAngle;
}

void CalculateElectricalAngle(void)
{
	float normPos = fmodf(Encoder.MechanicalAngle_15bit, 32768);
	
#if MotorType == SUNNYSKY_X4125_9	
	
	uint32_t index = UtilBiSearchInt(MechanicalAngleRef, normPos, sizeof(MechanicalAngleRef)/sizeof(MechanicalAngleRef[0]));
	
#endif

	uint32_t indexPlus1 = index + 1;
	
	Encoder.ElectricalAngle = fmodf(utils_map(Encoder.MechanicalAngle_15bit, MechanicalAngleRef[index], MechanicalAngleRef[indexPlus1], ElectricalAngleRef[index], ElectricalAngleRef[indexPlus1]), 360);
}

void GetElectricalAngleSpeed(void)
{
	Encoder.ElectricalAngleSpeed = Encoder.MechanicalAngleSpeed * MotorMagnetPairs;
}

void GetAverageElectricalAngleSpeed(void)
{
	Encoder.AverageElectricalAngleSpeed = Encoder.AverageMechanicalAngleSpeed * MotorMagnetPairs;
}

void GetAverageMechanicalAngleSpeed(void)
{
	const uint8_t num = 5;
 	static float array[num] = {0};
	static uint8_t pos = 0;
	static float data = 0.0f;
	static float sum = 0.0f;
	static float average = 0.0f;
	float old = array[pos];
	
	data = Encoder.MechanicalAngleSpeed;
	
	array[pos] = data;
	
	sum = (sum - old) + data;
	
	average = sum / num;

	pos = (pos+1) % num;

	Encoder.AverageMechanicalAngleSpeed = average;
}


void GetMechanicalAngleSpeed_Encoder_15bit(void)
{
	uint16_t data = 0;
	int16_t val = 0;
	data = TLE5012_ReadRegister(TLE5012_Command_ReadCurrentValue_AngleSpeed);
	// uint16 left shift
	// Pay attention to the type convertion :unsigned to sign
	val = (data << 1);
	// Sign16 right shift 符号位不动
	Encoder.MechanicalAngleSpeed_Encoder_15bit = (val << 1);
}

void GetMechanicalAngleSpeed_Encoder(void)
{
	Encoder.MechanicalAngleSpeed_Encoder = (float)Encoder.MechanicalAngleSpeed_Encoder_15bit * 32.48776625f;
}

uint16_t TLE5012_ReadRegister(uint16_t command)
{
	uint16_t data = 0;
	uint16_t safetyWord = 0;
	
	TLE5012_SPI1_ChipSelect;
	
	SPI_Transmit(SPI1, command, TimeOut);
	SPI_TX_OFF;
	
	SPI_Receive(SPI1, &data, TimeOut);
	SPI_Receive(SPI1, &safetyWord, TimeOut);
	
	TLE5012_SPI1_ChipDiselect;
	SPI_TX_ON;

	return data;
}


  
